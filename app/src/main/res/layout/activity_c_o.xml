<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Theory">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/co1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course outcome 1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="#EF1E0F"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minLines="1"
                    android:maxLines="10"
                    android:maxHeight="2000dp"
                    android:inputType="textMultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/co2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course Outcome 2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="#EF1E0F"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minLines="1"
                    android:maxLines="10"
                    android:maxHeight="2000dp"
                    android:inputType="textMultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/co3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course Outcome 3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="#EF1E0F"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minLines="1"
                    android:maxLines="10"
                    android:maxHeight="2000dp"
                    android:inputType="textMultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/co4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course Outcome 4"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="#EF1E0F"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minLines="1"
                    android:maxLines="10"
                    android:maxHeight="2000dp"
                    android:inputType="textMultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/co5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course Outcome 5"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="#EF1E0F"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minLines="1"
                    android:maxLines="10"
                    android:maxHeight="2000dp"
                    android:inputType="textMultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/co6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course Outcome 6"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="#EF1E0F"

                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minLines="1"
                    android:maxLines="10"
                    android:maxHeight="2000dp"
                    android:inputType="textMultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/conext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#1D2F91"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="60dp"
                android:text="NEXT" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/black"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>